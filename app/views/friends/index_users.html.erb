
<div class="w-full">
            <%= link_to "/#{@current_locale}/user/#{@current_user.id}/friends/", id:"logout-mobile", class:"absolute" do %>
              <div class="flex flex-end items-center space-x-3 px-2 rtl:space-x-reverse cursor-pointer">
              <img src="/images/friends/undo-arrow.png" class="h-8 flex flex-end items-center transform hover:scale-x-110 hover:scale-y-105 transition duration-300 ease-out cursor-pointer mt-2 ml-2" alt="Undo friend"/>
                <!--<img src="/images/icons/logout_tertiary.png" class="h-8 hidden dark:block" alt="Settings" />-->
              </div>
            <% end %>
    <input id="users-search" class= "w-11/12 justify-center sm:w-2/3 placeholder-tertiary-default dark:placeholder-black text-tertiary-default dark:text-black bg-white dark:bg-tertiary-default  m-auto mt-12 px-6 py-2 m-auto rounded-md flex outline-none bg-white border-none focus:border-none focus:ring-0 shadow-xl" , placeholder = "<%= t('friends.search.searchBar') %>" />

    <div class="relative h-[calc(100%-150px)] dark:border-tertiary-default shadow-md dark:border flip-card-login-inner w-screen mx-auto sm:w-[400px] rounded-md mt-8 overflow-scroll">
        <% if @users.present? %>
            <ul id="users-list">
            </ul>
        <% end %>
    <div>
</div>
